@{
    ViewBag.Title = "Home";
}
@section Title {
<title> @ViewBag.Title</title>
}
<!-- Start slider -->
<section id="aa-slider">
    <div class="aa-slider-area">
        <div id="sequence" class="seq">
            <div class="seq-screen">
                <ul class="seq-canvas">
                    @foreach (var slide in ViewBag.slider)
                    {
                        <!-- single slide item -->
                        <li>
                            <div class="seq-model">
                                <img data-seq src="~/Content/dailyShop/img/slider/@slide.name" alt="Men slide img" />
                            </div>
                            <div class="seq-title">
                                <span data-seq>HOT ITEMS</span>
                                <h2 data-seq>Lovely Collection</h2>
                                <p data-seq>Case Forest give the best covers.</p>
                                <a data-seq href="@Url.Action("ProductByRate","Home")" class="aa-shop-now-btn aa-secondary-btn">SHOP NOW</a>
                            </div>
                        </li>
                    }
                    <!-- single slide item -->
                    <li>
                        <div class="seq-model">
                            <img data-seq src="~/Content/dailyShop/img/slider/1.jpg" alt="Male Female slide img" />
                        </div>
                        <div class="seq-title">
                            <span data-seq>Save Up to 50% Off</span>
                            <h2 data-seq>Best Collection</h2>
                            <p data-seq>Joying the sale season with us.</p>
                            <a data-seq href="@Url.Action("DiscountProduct","Home")" class="aa-shop-now-btn aa-secondary-btn">SHOP NOW</a>
                        </div>
                    </li>
                </ul>
            </div>
            <!-- slider navigation btn -->
            <fieldset class="seq-nav" aria-controls="sequence" aria-label="Slider buttons">
                <a type="button" class="seq-prev" aria-label="Previous"><span class="fa fa-angle-left"></span></a>
                <a type="button" class="seq-next" aria-label="Next"><span class="fa fa-angle-right"></span></a>
            </fieldset>
        </div>
    </div>
</section>
<!-- / slider -->
<!-- Start Promo section -->
<section id="aa-promo">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-promo-area">
                    <div class="row">
                        <!-- promo left -->
                        <div class="col-md-5 no-padding">
                            <div class="aa-promo-left">
                                <div class="aa-promo-banner">
                                    <img src="~/Content/dailyShop/img/red-450x450.jpg" alt="img">
                                    <div class="aa-prom-content">
                                        <h4><a href="@Url.Action("DiscountProduct","Home")">Sale</a></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- promo right -->
                        <div class="col-md-7 no-padding">
                            <div class="aa-promo-right">
                                <div class="aa-single-promo-right">
                                    <div class="aa-promo-banner">
                                        <img src="~/Content/dailyShop/img/grey-320x220.jpg" alt="img">
                                        <div class="aa-prom-content">
                                            <h4><a href="@Url.Action("ProductByRate","Home")">Hot Items</a></h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="aa-single-promo-right">
                                    <div class="aa-promo-banner">
                                        <img src="~/Content/dailyShop/img/orange-320x220.jpg" alt="img">
                                        <div class="aa-prom-content">
                                            <h4><a href="@Url.Action("Product","Home")">New Items</a></h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="aa-single-promo-right">
                                    <div class="aa-promo-banner">
                                        <img src="~/Content/dailyShop/img/green-320x220.jpg" alt="img">
                                        <div class="aa-prom-content">
                                            <h4><a href="@Url.Action("Account","Home")">Join Us</a></h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="aa-single-promo-right">
                                    <div class="aa-promo-banner">
                                        <img src="~/Content/dailyShop/img/blue-320x220.jpg" alt="img">
                                        <div class="aa-prom-content">
                                            <h4><a href="@Url.Action("Contact","Home")">Contact</a></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Promo section -->
<!-- popular section -->
<section id="aa-popular-category">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-popular-category-area">
                        <!-- start prduct navigation -->
                        <ul class="nav nav-tabs aa-products-tab">
                            <li class="active"><a href="#popular" data-toggle="tab">Featured</a></li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <!-- Start men popular category -->
                            <div class="tab-pane fade in active" id="popular">
                                <ul class="aa-product-catg aa-popular-slider">
                                    <!-- start single product item -->
                                    @foreach (var proI in ViewBag.product)
                                    {
                                        <!-- start single product item -->
                                    <li>
                                        <figure>
                                            <a class="aa-product-img" href="@Url.Action("ProductDetail","Home",new { id = proI.id})"><img src="~/Content/dailyShop/img/product/@proI.img" alt="@proI.meta_name" width="300px" height="300px"></a>
                                            @if (proI.amount > 0)
                                            {
                                                <a class="aa-add-card-btn" href="@Url.Action("addCart","Home",new { id = proI.id})"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                            }
                                            <figcaption>
                                                <h4 class="aa-product-title"><a href="#">@proI.name</a></h4>
                                                @if (proI.discount > 0)
                                                {
                                                    <span class="aa-product-price"> @String.Format("{0:0,0}", proI.discount) đ</span><span class="aa-product-price"><del> @String.Format("{0:0,0}", proI.price) đ</del></span>
                                                }
                                                else
                                                {
                                                    <span class="aa-product-price"> @String.Format("{0:0,0}", proI.price) đ</span>
                                                }
                                            </figcaption>
                                        </figure>
                                        <!-- product badge -->
                                        @if (proI.amount <= 0)
                                        {
                                            <span class="aa-badge aa-sold-out" href="#">Sold Out!</span>
                                        }
                                        else if (proI.discount > 0)
                                        {
                                            <span class="aa-badge aa-sale" href="#">SALE!</span>
                                        }
                                        else if (proI.rate > 0)
                                        {
                                            <span class="aa-badge aa-hot" href="#">HOT!</span>
                                        }
                                    </li>
                                    }
                                </ul>
                                <a class="aa-browse-btn" href="@Url.Action("Product","Home")">Browse all Product <span class="fa fa-long-arrow-right"></span></a>
                            </div>
                            <!-- / popular product category -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / popular section -->
<!-- banner section -->
<section id="aa-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-banner-area">
                        <a href="#"><img src="~/Content/dailyShop/img/fashion-banner.jpg" alt="fashion banner img"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Products section -->
<section id="aa-product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-product-area">
                        <div class="aa-product-inner">
                            <!-- start prduct navigation -->
                            <ul class="nav nav-tabs aa-products-tab">
                                <li class="active"><a href="#men" data-toggle="tab">SALE</a></li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <!-- Start men product category -->
                                <div class="tab-pane fade in active" id="men">
                                    <ul class="aa-product-catg">
                                        @foreach (var proI in ViewBag.product)
                                        {
                                            if (proI.discount > 0)
                                            {
                                                <!-- start single product item -->
                                        <li>
                                            <figure>
                                                <a class="aa-product-img" href="@Url.Action("ProductDetail","Home",new { id = proI.id})"><img src="~/Content/dailyShop/img/product/@proI.img" alt="@proI.meta_name" width="300px" height="300px"></a>
                                                @if (proI.amount > 0)
                                                {
                                                    <a class="aa-add-card-btn" href="@Url.Action("addCart","Home",new { id = proI.id})"><span class="fa fa-shopping-cart"></span>Add To Cart</a>
                                                }
                                                <figcaption>
                                                    <h4 class="aa-product-title"><a href="#">@proI.name</a></h4>
                                                    @if (proI.discount > 0)
                                                    {
                                                        <span class="aa-product-price"> @String.Format("{0:0,0}", proI.discount) đ</span><span class="aa-product-price"><del> @String.Format("{0:0,0}", proI.price) đ</del></span>
                                                    }
                                                    else
                                                    {
                                                        <span class="aa-product-price"> @String.Format("{0:0,0}", proI.price) đ</span>
                                                    }
                                                </figcaption>
                                            </figure>
                                            <!-- product badge -->
                                            @if (proI.amount <= 0)
                                            {
                                                <span class="aa-badge aa-sold-out" href="#">Sold Out!</span>
                                            }
                                            else if (proI.discount > 0)
                                            {
                                                <span class="aa-badge aa-sale" href="#">SALE!</span>
                                            }
                                            else if (proI.rate > 0)
                                            {
                                                <span class="aa-badge aa-hot" href="#">HOT!</span>
                                            }
                                        </li>
                                            }
                                        }
                                    </ul>
                                    <a class="aa-browse-btn" href="@Url.Action("Product","Home")">Browse all Product <span class="fa fa-long-arrow-right"></span></a>
                                </div>
                                <!-- / men product category -->
                            </div>
                            <!-- quick view modal -->
                            <!-- / quick view modal -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Products section -->
