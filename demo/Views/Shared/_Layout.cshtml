@{ 
    demo.Models.tbl_Customer user = (demo.Models.tbl_Customer)Session["user"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @RenderSection("Title", required: false)

    <!-- Font awesome -->
    <link href="~/Content/dailyShop/css/font-awesome.css" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="~/Content/dailyShop/css/bootstrap.css" rel="stylesheet">
    <!-- SmartMenus jQuery Bootstrap Addon CSS -->
    <link href="~/Content/dailyShop/css/jquery.smartmenus.bootstrap.css" rel="stylesheet">
    <!-- Product view slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/dailyShop/css/jquery.simpleLens.css">
    <!-- slick slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/dailyShop/css/slick.css">
    <!-- price picker slider -->
    <link rel="stylesheet" type="text/css" href="~/Content/dailyShop/css/nouislider.css">
    <!-- Theme color -->
    <link id="switcher" href="~/Content/dailyShop/css/theme-color/default-theme.css" rel="stylesheet">
    <!-- <link id="switcher" href="css/theme-color/bridge-theme.css" rel="stylesheet"> -->
    <!-- Top Slider CSS -->
    <link href="~/Content/dailyShop/css/sequence-theme.modern-slide-in.css" rel="stylesheet" media="all">

    <!-- Main style sheet -->
    <link href="~/Content/dailyShop/css/style.css" rel="stylesheet">

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>
    <!-- wpf loader Two -->
    <div id="wpf-loader-two">
        <div class="wpf-loader-two-inner">
            <span>Loading</span>
        </div>
    </div>
    <!-- / wpf loader Two -->
    <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start header section -->
    <header id="aa-header">
        <!-- start header top  -->
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">
                                    <li class="hidden-xs">@Html.ActionLink("Cart", "Cart", "Home")</li>
                                    @if (user != null)
                                    {
                                        <li class="hidden-xs">@Html.ActionLink("Checkout", "Checkout", "Home")</li>
                                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                                        <li class="hidden-xs"><a href="@Url.Action("Account","Home")">Hello @user.name !!</a></li>

                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("Account", "Account", "Home")</li>
                                        <li><a href="#" data-toggle="modal" data-target="#login-modal">Login</a></li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / header top  -->
        <!-- start header bottom  -->
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="aa-logo">
                                <!-- Text based logo -->
                                <a href="@Url.Action("Index", "Home")">
                                    <span class="fa fa-shopping-cart"></span>
                                    <p>CASE<strong>forest</strong> <span>Your Phone's Covers Partner</span></p>
                                </a>
                                <!-- img based logo -->
                                <!-- <a href="index.html"><img src="img/logo.jpg" alt="logo img"></a> -->
                            </div>
                            <!-- / logo  -->
                            @{Html.RenderAction("_Cart", "Home");}
                            <!-- search box -->
                            <div class="aa-search-box">
                                <form action="@Url.Action("Search","Home")" method="get">
                                    @if (ViewBag.search != null)
                                    {
                                        <input type="text" name="search" id="" value="@ViewBag.search">
                                    }
                                    else
                                    {
                                        <input type="text" name="search" id="" placeholder="Search here ">
                                    }

                                    <button type="submit"><span class="fa fa-search"></span></button>
                                </form>
                            </div>
                            <!-- / search box -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / header bottom  -->
    </header>
    <!-- / header section -->
    <!-- menu -->
    <section id="menu">
        <div class="container">
            <div class="menu-area">
                <!-- Navbar -->
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <!-- Left nav -->
                        <ul class="nav navbar-nav">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Product", "Product", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
    </section>
    <!-- / menu -->
    @RenderBody()
    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-4 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Main Menu</h3>
                                        <ul class="aa-footer-nav">
                                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                            <li>@Html.ActionLink("Our Products", "Product", "Home")</li>
                                            <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Knowledge Base</h3>
                                            <ul class="aa-footer-nav">
                                                <li>@Html.ActionLink("Discount Products", "DiscountProduct", "Home")</li>
                                                <li>@Html.ActionLink("Special Offer", "ProductByRate", "Home")</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>Contact Us</h3>
                                            <address>
                                                <p> xxxxx-xxx-xxxxx-xxx</p>
                                                <p><span class="fa fa-phone"></span>01234567890</p>
                                                <p><span class="fa fa-envelope"></span>caseforest@xxx.com</p>
                                            </address>
                                            <div class="aa-footer-social">
                                                <a href="https://www.facebook.com/" target="_blank"><span class="fa fa-facebook"></span></a>
                                                <a href="https://www.twitter.com/" target="_blank"><span class="fa fa-twitter"></span></a>
                                                <a href="https://www.youtube.com/" target="_blank"><span class="fa fa-youtube"></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer-bottom -->
        <div class="aa-footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-bottom-area">
                            <p>Designed by <a href="https://www.instagram.com/concatapboi/" target="_blank">concatapboi</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- / footer -->
    <!-- Login Modal -->
    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4>Login</h4>
                    <form class="aa-login-form" action="@Url.Action("Login","Home")" method="post" enctype="multipart/form-data">
                        <label for="">Username<span>*</span></label>
                        <input type="text" placeholder="Username" name="username">
                        <label for="">Password<span>*</span></label>
                        <input type="password" placeholder="Password" name="password" min="3">
                        <button class="aa-browse-btn" type="submit" name="submit">Login</button>
                        <div class="aa-register-now">
                            Don't have an account?<a href="@Url.Action("Account","Home")">Register now!</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="acc-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4>Update Information</h4>
                    <form class="aa-login-form" action="@Url.Action("UpdateInfo","Home")" method="post" enctype="multipart/form-data">
                        @if (Session["user"] != null)
                        {
                        <table class="table">
                            <tr>
                                <td><label>Name: </label></td>
                                <td><input type="text" name="name" value="@user.name" required/></td>
                            </tr>
                            <tr>
                                <td><label>Password: </label></td>
                                <td><input type="password" placeholder="Password" name="pass" required /></td>
                            </tr>
                            <tr>
                                <td><label>Email: </label></td>
                                <td><input type="text" name="email" value="@user.email" required/></td>
                            </tr>
                            <tr>
                                <td><label>Phone Number: </label></td>
                                <td><input type="text" name="phone" value="@user.phone" required/></td>
                            </tr>
                            <tr>
                                <td><label>Address: </label></td>
                                <td><textarea cols="40" rows="3" name="address" required>@user.cus_address</textarea></td>
                            </tr>
                        </table>       
                        }
                        <button class="aa-browse-btn" type="submit" name="submit">OK</button>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Content/dailyShop/js/bootstrap.js"></script>
    <!-- SmartMenus jQuery plugin -->
    <script type="text/javascript" src="~/Content/dailyShop/js/jquery.smartmenus.js"></script>
    <!-- SmartMenus jQuery Bootstrap Addon -->
    <script type="text/javascript" src="~/Content/dailyShop/js/jquery.smartmenus.bootstrap.js"></script>
    <!-- To Slider JS -->
    <script src="~/Content/dailyShop/js/sequence.js"></script>
    <script src="~/Content/dailyShop/js/sequence-theme.modern-slide-in.js"></script>
    <!-- Product view slider -->
    <script type="text/javascript" src="~/Content/dailyShop/js/jquery.simpleGallery.js"></script>
    <script type="text/javascript" src="~/Content/dailyShop/js/jquery.simpleLens.js"></script>
    <!-- slick slider -->
    <script type="text/javascript" src="~/Content/dailyShop/js/slick.js"></script>
    <!-- Price picker slider -->
    <script type="text/javascript" src="~/Content/dailyShop/js/nouislider.js"></script>
    <!-- Custom js -->
    <script src="~/Content/dailyShop/js/custom.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>